{
  success: true,
  data: {
    default: '用户名错误',
    _req: function({
      _req
    }) {
      return _req
    },
    name: function({
      _req
    }) {
      if (_req.body.name === 'admin') {
        return _req.body.name
      } else {
        return this.default
      }
    }
  }
}

